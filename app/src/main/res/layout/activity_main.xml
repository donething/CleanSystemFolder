<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/default_margin"
    tools:context="net.donething.android.cleansystemfolder.MainActivity">

    <TextView
        android:id="@+id/tvTitle"
        style="?android:attr/textAppearance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/et_folders_hint" />

    <EditText
        android:id="@+id/etFolders"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start|top"
        android:hint="@string/et_folders_hint"
        android:lines="8"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitle" />

    <Button
        android:id="@+id/bnStartDel"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bn_scan_folders"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etFolders" />

</android.support.constraint.ConstraintLayout>
